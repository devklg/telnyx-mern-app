# ============================================================================
# BMAD V4 - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# APPLICATION
# ----------------------------------------------------------------------------
NODE_ENV=development
PORT=5000

# ----------------------------------------------------------------------------
# NEO4J (KNOWLEDGE GRAPH)
# ----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# ----------------------------------------------------------------------------
# NEON POSTGRESQL (OPERATIONAL DATABASE)
# ----------------------------------------------------------------------------
# Get this from your Neon dashboard: https://neon.tech
NEON_CONNECTION_STRING=postgresql://user:password@host.neon.tech:5432/database?sslmode=require

# ----------------------------------------------------------------------------
# MONGODB (DOCUMENT STORAGE)
# ----------------------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017/bmad_voice_agents
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bmad_voice_agents?retryWrites=true&w=majority

# ----------------------------------------------------------------------------
# CHROMADB (VECTOR DATABASE)
# ----------------------------------------------------------------------------
CHROMA_URL=http://localhost:8000

# ----------------------------------------------------------------------------
# ANTHROPIC CLAUDE API
# ----------------------------------------------------------------------------
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# ----------------------------------------------------------------------------
# TELNYX (TELEPHONY)
# ----------------------------------------------------------------------------
# Get your API key from: https://portal.telnyx.com/
TELNYX_API_KEY=KEY1234567890abcdef
TELNYX_PUBLIC_KEY=+1234567890
TELNYX_APP_ID=your-telnyx-app-id

# Hot Transfer Number (Kevin's phone)
KEVIN_PHONE_NUMBER=+15551234567

# ----------------------------------------------------------------------------
# JWT AUTHENTICATION
# ----------------------------------------------------------------------------
# Generate a secure random string: openssl rand -hex 64
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# ----------------------------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------------------------------------
# LOGGING
# ----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ----------------------------------------------------------------------------
# MAGNIFICENT WORLDWIDE BRANDING
# ----------------------------------------------------------------------------
BRAND_PRIMARY_COLOR=#3b82f6
BRAND_SECONDARY_COLOR=#facc15
BRAND_BACKGROUND_COLOR=#0f172a

# ----------------------------------------------------------------------------
# BUSINESS METRICS
# ----------------------------------------------------------------------------
# Revenue Projection Model
TARGET_PARTNERS_PER_MONTH=50
PREMIUM_TIER_PRICE=99
STANDARD_TIER_PRICE=49
PREMIUM_TIER_PERCENTAGE=0.80
COMMISSION_RATE=0.20
ACQUISITION_BONUS_RATE=0.50

# ----------------------------------------------------------------------------
# GRAFANA DASHBOARD
# ----------------------------------------------------------------------------
GRAFANA_URL=http://localhost:3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# ----------------------------------------------------------------------------
# DEVELOPMENT
# ----------------------------------------------------------------------------
DEBUG=true
VERBOSE_LOGGING=false
ENABLE_SWAGGER=true