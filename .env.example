# BMAD V4 - Environment Variables Template
# Owner: Alex Martinez (DevOps Lead)
# Created: 2025-10-21

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Frontend
FRONTEND_URL=http://localhost:3000

# Database URLs
DATABASE_URL=postgresql://user:password@localhost:5432/bmad_v4
MONGODB_URI=mongodb://localhost:27017/bmad-v4
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Redis
REDIS_URL=redis://localhost:6379

# Telnyx
TELNYX_API_KEY=your_telnyx_api_key
TELNYX_PUBLIC_KEY=your_telnyx_public_key
TELNYX_PHONE_NUMBER=+1234567890

# Voice Agent
VOICE_AGENT_URL=http://localhost:4000

# Security
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-encryption-key-32-bytes-hex

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
