# ============================================
# BMAD V4 Lead Qualification Backend - Environment Configuration
# ============================================

# -----------------------
# Server Configuration
# -----------------------
NODE_ENV=development
PORT=3550
FRONTEND_URL=http://localhost:3500
ALLOWED_ORIGINS=http://localhost:3500,http://localhost:3000

# -----------------------
# Database Configuration
# -----------------------
# MongoDB - Primary database for leads, calls, campaigns
MONGODB_URI=mongodb://localhost:27017/bmad_v4

# PostgreSQL - Analytics and reporting
POSTGRES_URL=postgresql://username:password@localhost:5432/bmad_v4

# Neo4j - Relationship graph database
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Redis - Caching and session management
REDIS_URL=redis://localhost:6379

# -----------------------
# Telnyx Configuration
# -----------------------
# Telnyx API Key (starts with KEY...)
TELNYX_API_KEY=YOUR_TELNYX_API_KEY_HERE

# Telnyx Public Key for webhook signature validation
TELNYX_PUBLIC_KEY=YOUR_TELNYX_PUBLIC_KEY_HERE

# Telnyx Connection ID (Application/Connection ID from Telnyx portal)
TELNYX_CONNECTION_ID=your_connection_id_here

# Telnyx Phone Number (E.164 format: +1XXXXXXXXXX)
TELNYX_PHONE_NUMBER=+1-323-328-8457

# Kevin's Phone Number for Hot Transfer (E.164 format)
KEVIN_PHONE_NUMBER=+1XXXXXXXXXX

# Webhook Base URL (public URL for Telnyx webhooks)
API_BASE_URL=https://your-domain.com

# Webhook Secret for additional security
WEBHOOK_SECRET=your_webhook_secret_here

# -----------------------
# Anthropic Claude Configuration
# -----------------------
# Claude API Key for AI voice agent
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# Claude Model Version
CLAUDE_MODEL=claude-sonnet-4-20250514

# -----------------------
# Voice Agent Configuration
# -----------------------
# Voice Agent Service URL (running on port 3650)
VOICE_AGENT_URL=http://localhost:3650
VOICE_AGENT_API_KEY=your_voice_agent_api_key

# -----------------------
# Authentication & Security
# -----------------------
# JWT Secret for token signing
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# JWT Token Expiration
JWT_EXPIRES_IN=24h

# API Rate Limiting
API_RATE_LIMIT=1000

# Session Secret
SESSION_SECRET=your_session_secret_here

# -----------------------
# Lead Qualification Configuration
# -----------------------
# Qualification threshold (0-100)
LEAD_QUALIFICATION_THRESHOLD=60

# Call timeout in minutes
CALL_TIMEOUT_MINUTES=15

# Maximum concurrent calls
MAX_CONCURRENT_CALLS=50

# Ron Maleziis Configuration - Qualification Weights
BUSINESS_INTEREST_WEIGHT=25
EMPLOYMENT_STATUS_WEIGHT=20
INCOME_COMMITMENT_WEIGHT=25
PERSONAL_EXPERIENCE_WEIGHT=15
DECISION_MAKING_WEIGHT=15

# -----------------------
# Logging & Monitoring
# -----------------------
LOG_LEVEL=info
LOG_FORMAT=combined

# -----------------------
# Feature Flags
# -----------------------
ENABLE_RECORDING=true
ENABLE_TRANSCRIPTION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_AUTO_TRANSFER=true

# -----------------------
# External Services
# -----------------------
# Email Service (SendGrid, AWS SES, etc.)
EMAIL_SERVICE_API_KEY=your_email_api_key
EMAIL_FROM=noreply@yourdomain.com

# SMS Service (if separate from Telnyx)
SMS_SERVICE_API_KEY=your_sms_api_key

# -----------------------
# Development & Testing
# -----------------------
# Enable debug mode
DEBUG=false

# Mock Telnyx API (for testing without real calls)
MOCK_TELNYX=false

# Test Phone Numbers (comma-separated)
TEST_PHONE_NUMBERS=+15555555555,+15555555556
