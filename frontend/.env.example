# ===========================================
# BMAD V4 Frontend - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# Variables prefixed with VITE_ are exposed to the browser
# ===========================================

# -------------------------------------------
# API CONFIGURATION
# -------------------------------------------
# Backend API base URL
VITE_API_URL=http://localhost:3550/api

# API Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Enable API request logging in console
VITE_API_DEBUG=false

# -------------------------------------------
# APPLICATION CONFIGURATION
# -------------------------------------------
VITE_APP_NAME=BMAD V4 Lead Qualification
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Advanced Lead Qualification & Management System

# Application Environment
VITE_APP_ENV=development

# -------------------------------------------
# FEATURE FLAGS
# -------------------------------------------
VITE_FEATURE_VOICE_AGENT=true
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_REAL_TIME_UPDATES=true
VITE_FEATURE_DARK_MODE=true
VITE_FEATURE_EXPORT_REPORTS=true

# -------------------------------------------
# AUTHENTICATION
# -------------------------------------------
# Token storage key
VITE_AUTH_TOKEN_KEY=bmad_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=bmad_refresh_token

# Auto-logout after inactivity (milliseconds)
VITE_SESSION_TIMEOUT=1800000

# Remember me duration (days)
VITE_REMEMBER_ME_DAYS=30

# -------------------------------------------
# UI CONFIGURATION
# -------------------------------------------
# Items per page in tables/lists
VITE_PAGINATION_DEFAULT_SIZE=25
VITE_PAGINATION_SIZE_OPTIONS=10,25,50,100

# Date/Time format
VITE_DATE_FORMAT=MM/DD/YYYY
VITE_TIME_FORMAT=hh:mm A
VITE_DATETIME_FORMAT=MM/DD/YYYY hh:mm A

# Timezone
VITE_TIMEZONE=America/New_York

# -------------------------------------------
# TELNYX CONFIGURATION
# -------------------------------------------
# Telnyx public key for client-side operations
VITE_TELNYX_PUBLIC_KEY=your_telnyx_public_key_here

# -------------------------------------------
# MONITORING & ANALYTICS
# -------------------------------------------
# Google Analytics (optional)
VITE_GA_TRACKING_ID=

# Sentry DSN for frontend error tracking (optional)
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0

# -------------------------------------------
# WEBSOCKET CONFIGURATION
# -------------------------------------------
# WebSocket URL for real-time updates
VITE_WS_URL=ws://localhost:3550

# WebSocket reconnection settings
VITE_WS_RECONNECT_ATTEMPTS=5
VITE_WS_RECONNECT_INTERVAL=3000

# -------------------------------------------
# DEVELOPMENT TOOLS
# -------------------------------------------
# Enable React DevTools
VITE_ENABLE_DEVTOOLS=true

# Enable console logging
VITE_ENABLE_LOGGING=true

# Show development notifications
VITE_SHOW_DEV_NOTIFICATIONS=true

# -------------------------------------------
# PRODUCTION OVERRIDES
# -------------------------------------------
# In production, ensure you set:
# - VITE_APP_ENV=production
# - VITE_API_URL=https://your-production-api.com/api
# - VITE_WS_URL=wss://your-production-api.com
# - VITE_API_DEBUG=false
# - VITE_ENABLE_LOGGING=false
# - Configure proper Sentry/Analytics IDs
# -------------------------------------------